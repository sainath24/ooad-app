<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MerchantHome">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/merchant_home_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />


    <FrameLayout
        android:id="@+id/merchant_home_fragment"
        android:layout_below="@id/merchant_home_toolbar"
        android:layout_above="@id/merchant_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/merchant_navigation_view"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/menu_merchant_navigation">
    </com.google.android.material.bottomnavigation.BottomNavigationView>


</RelativeLayout>